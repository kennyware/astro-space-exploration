---
export interface Props {
  src: string;
}

const { src } = Astro.props;

const test = "../images/destination/background-destination-desktop.jpg";
const bgImgSrc = `url(${src})`;
---

<div class="backdrop"></div>

<style define:vars={{ imgSrc: bgImgSrc }}>
  .backdrop {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: var(--imgSrc) no-repeat fixed;
    background-size: cover;
    z-index: -5;
  }
</style>
